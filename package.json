{
  "name": "applicature.multivest",
  "version": "0.1.0",
  "private": true,
  "author": "Andrew Zubko <andrew@applicature.com>",
  "engines": {
    "node": ">=4.8.0",
    "npm": ">=2.15.11",
    "yarn": ">=0.20.3"
  },
  "scripts": {
    "start": "node dist/app",
    "dev": "nodemon dist/app.js",
    "build": "babel src -d dist --copy-files",
    "lint": "esw *.js src config --color",
    "lint:watch": "yarn lint -- --watch",
    "precommit": "yarn lint ; yarn test",
    "test": "cross-env NODE_ENV=test ./node_modules/.bin/mocha --ui bdd --reporter spec --colors --compilers js:babel-core/register ./tests/ --recursive",
    "test:watch": "yarn test -- --watch",
    "test:coverage": "cross-env NODE_ENV=test ./node_modules/.bin/istanbul cover _mocha -- --ui bdd --reporter spec --colors --compilers js:babel-core/register ./tests --recursive",
    "test:check-coverage": "yarn test:coverage && istanbul check-coverage",
    "report-coverage": "nyc --reporter=lcov --reporter=text-lcov yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Ryfts/multivest.git"
  },
  "dependencies": {
    "agenda": "^1.0.0",
    "bignumber.js": "^4.0.4",
    "bitcoin-core": "^1.2.0",
    "bitcoinjs-lib": "^3.1.1",
    "bluebird": "^3.5.0",
    "body-parser": "1.15.2",
    "compression": "1.6.2",
    "config": "^1.26.1",
    "connect-mongo": "^1.3.2",
    "cookie-parser": "1.4.3",
    "cors": "2.8.1",
    "debug": "~2.2.0",
    "dotenv": "^4.0.0",
    "email-validator": "^1.1.1",
    "ethereum-bip44": "^2.1.3",
    "express": "4.14.0",
    "express-session": "^1.15.4",
    "express-validation": "^1.0.2",
    "express-winston": "2.1.2",
    "hbs": "^4.0.1",
    "helmet": "3.1.0",
    "http-status": "^0.2.0",
    "ioredis": "^1.15.0",
    "joi": "^11.0.1",
    "mailchimp-api-v3": "^1.7.1",
    "method-override": "^2.3.5",
    "moment": "^2.13.0",
    "mongodb": "^2.2.28",
    "morgan": "~1.6.1",
    "node-rdkafka": "^1.0.0",
    "node-uuid": "^1.4.7",
    "nodemailer": "^4.1.1",
    "randomstring": "^1.1.5",
    "request-promise": "^4.2.1",
    "swagger-jsdoc": "^1.9.7",
    "utf8": "^2.1.1",
    "web3": "^1.0.0-beta.18",
    "winston": "^2.1.1"
  },
  "devDependencies": {
    "assert": "^1.4.1",
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.5.2",
    "babel-register": "^6.24.1",
    "chai": "^4.0.2",
    "chai-subset": "^1.5.0",
    "cross-env": "^5.0.3",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-react": "^7.0.1",
    "eslint-watch": "^3.1.0",
    "husky": "^0.13.4",
    "lodash.clone": "^4.5.0",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "nyc": "^11.0.2",
    "should": "^10.0.0",
    "supertest": "^1.2.0",
    "supertest-as-promised": "^4.0.2"
  }
}
